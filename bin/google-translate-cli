;;; Commentary:
;;
;; The command-line interface.
;;

;;; Code:

(require 'google-translate-cli)
(require 'commander)
(require 'pp)

(defun google-translate-cli--translate (&rest args)
  "Translate the text and output to standard output."
  (google-translate-cli
   google-translate-cli--source-language
   google-translate-cli--target-language
   (mapconcat #'identity args " ")))

(defun google-translate-cli--list ()
  "List of supported languages."
  (pp google-translate-supported-languages-alist))

(defun google-translate-cli--set-target-language (arg)
  "Set the target language."
  (setq google-translate-cli--target-language arg))

(defun google-translate-cli--set-source-language (arg)
  "Set the source language."
  (setq google-translate-cli--source-language arg))

(commander
 (name "google-translate-cli")
 (description "A command-line interface for Google Translate")
 (default commander-print-usage-and-exit)
 (option "--help, -h" "Show usage information and exit" commander-print-usage-and-exit)

 (command "translate [*]"
          "Translate the text and output to standard output."
          google-translate-cli--translate)
 (command "list"
          "List of supported languages."
          google-translate-cli--list)

 (option "--target-language <target-language>, -t <target-language>"
         google-translate-cli--set-target-language)
 (option "--source-language <source-language>, -s <source-language>"
         google-translate-cli--set-source-language))

;;; google-translate-cli ends here
